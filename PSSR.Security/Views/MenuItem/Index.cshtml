@model IEnumerable<PSSR.UserSecurity.Models.NavigationMenuType>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="col-sm-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Menu List</h4>
            <div class="table-responsive">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <table class="table table-hover">
                    <thead><tr><th>Name</th><th>Icon</th><th>IsNested</th><th>Sequence</th><th>Roles</th><th></th></tr></thead>
                    @if (Model.Count() == 0)
                    {
                        <tr><td colspan="6" class="text-center">No menu items</td></tr>
                    }
                    else
                    {
                        foreach (var menu in Model)
                        {
                            <tr>
                                @*<td>@user.Id</td>*@
                                <td>@menu.DisplayName</td>
                                <td>@menu.MaterialIcon</td>
                                <td>@menu.IsNested</td>
                                <td>@menu.Sequence</td>
                                <td>
                                    @if (menu.Roles.Any())
                                    {
                                        var rName = menu.Roles.Select(s => s.Role.Name).Aggregate((s, v) => s + " , " + v);
                                        <p>@rName</p>
                                    }
                                </td>
                                <td>
                                    <form asp-action="DeleteMenu" asp-route-menuId="@menu.Id" method="post">
                                        <a class="btn btn-sm btn-primary" asp-action="EditMenu"
                                           asp-route-id="@menu.Id">Edit</a>
                                        <button type="submit"
                                                class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </table>
                <a class="btn btn-primary" asp-action="MenuInsert" asp-controller="MenuItem" asp-route-id="0">Create</a>
            </div>
        </div>
    </div>
</div>


