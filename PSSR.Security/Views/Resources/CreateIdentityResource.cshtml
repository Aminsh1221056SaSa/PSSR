@model PSSR.Security.Models.ClientModel
@{
    ViewData["Title"] = "CreateIdentityResource";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";

    Type myType = typeof(IdentityServer4.Models.IdentityResources);
    var list = new List<SelectListItem>();
    foreach (var tn in myType.GetNestedTypes())
    {
        list.Add(new SelectListItem { Text = tn.Name, Value = tn.Name });
    }
}
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add Identity Resources</h4>
                    <div class="table-responsive">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <form asp-action="CreateResource">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Identity Resource</label>
                                    <select asp-for="AllowedScopes" asp-items="list" class="js-example-basic-IdentityResources w-100"
                                            data-placeholder="Select resources" id="select-Resources"
                                            style="width: 100%;color:black"></select>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-warning" />
                                    <a asp-action="ResourcesList" class="btn btn-info">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
      



