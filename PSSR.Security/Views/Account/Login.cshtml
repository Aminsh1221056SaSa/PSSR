@model LoginViewModel

<div>
    <partial name="_ValidationSummary" />
</div>
@if (Model.EnableLocalLogin)
{
<form asp-route="Login" id="signup-form" class="signup-form" autocomplete="off">
    <input type="hidden" asp-for="ReturnUrl" />
    <h2>Sign In</h2>
    <div class="form-group">
        <input type="text"  id="name" placeholder="User Name" asp-for="Username" autofocus autocomplete="off"/>
    </div>
    <div class="form-group">
        <input type="password"  id="password" placeholder="Password" asp-for="Password" autocomplete="off" readonly/>
        <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
    </div>
    @if (Model.AllowRememberLogin)
    {
        <div class="form-group">
            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" asp-for="RememberLogin" />
            <label for="agree-term" class="label-agree-term"><span><span></span></span>Remember My Login</label>
        </div>
    }

<div class="form-group">
    <button class="form-submit submit" name="button" value="login">Sign In</button>
</div>
</form>
}

