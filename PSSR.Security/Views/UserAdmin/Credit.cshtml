@model IEnumerable<PSSR.UserSecurity.Models.AppUser>
@{
    ViewData["Title"] = "Credit";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

    <div class="col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Role List</h4>
                <div class="table-responsive">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <table class="table table-hover">
                        <thead> <tr>@*<th>ID</th>*@<th>Name</th><th>Email</th></tr></thead>
                        @if (Model.Count() == 0)
                        {
                            <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
                        }
                        else
                        {
                            foreach (var user in Model)
                            {
                                <tr>
                                    @*<td>@user.Id</td>*@
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        <form asp-action="CreditDelete" asp-route-id="@user.Id" method="post">
                                            <a class="btn btn-sm btn-primary" asp-action="CreditEdit"
                                               asp-route-id="@user.Id">Edit</a>
                                            <button type="submit"
                                                    class="btn btn-sm btn-danger">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                    <a class="btn btn-primary" asp-action="CreditInsert" asp-controller="UserAdmin" asp-route-id="0">Create</a>
                </div>
            </div>
        </div>
    </div>


