@model PSSR.Security.Models.ClientModel

@{
    ViewData["Title"] = "CreateClient";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
    var grants = Model.AllowedGrantTypes.Select(x => new SelectListItem{ Text = x, Value = x,Selected=false });
    var scopes=Model.AllowedScopes.Select(x => new SelectListItem{ Text = x, Value = x,Selected=false });
}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add Client</h4>
                    <div class="table-responsive">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <form asp-action="CreateClient">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="control-label">Clien Name</label>
                                            <input asp-for="ClientName" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Description" class="control-label"></label>
                                            <input asp-for="Description" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Allowed Scopes</label>
                                            <select asp-for="SelectedScopes" asp-items="scopes" class="js-example-basic-IdentityResources w-100"
                                                    data-placeholder="Select scopes" id="select-scope"
                                                    style="width: 100%;color:black"></select>
                                        </div>
                                        
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-warning" />
                                            <a asp-action="ClientList" class="btn btn-info">Cancel</a>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">Allowed GrantType</label>
                                            <select asp-for="AllowedGrantType" asp-items="grants" class="js-example-basic-single w-100"
                                                    data-placeholder="Select Grant Type" id="select-Grant"
                                                    style="width: 100%;color:black"></select>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Redirect Uris</label>
                                            <select asp-for="RedirectUris" class="js-example-basic-IdentityResources w-100"
                                                    data-placeholder="Please insert urls" id="select-redirectUrls"
                                                    style="width: 100%;color:black"></select>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label">Post Logout Redirect Uris</label>
                                            <select asp-for="PostLogoutRedirectUris" class="js-example-basic-IdentityResources w-100"
                                                    data-placeholder="Please insert urls" id="select-PostLogoutRedirectUris"
                                                    style="width: 100%;color:black"></select>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                       
                                        <div class="form-group">
                                            <label asp-for="SecretCode" class="control-label"></label>
                                            <input asp-for="SecretCode" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <div class="form-check">
                                                <label class="form-check-label">
                                                    <input asp-for="AllowOfflineAccess" /> Allow Offline Access
                                                    <i class="input-helper"></i>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-check">
                                                <label class="form-check-label">
                                                    <input asp-for="AlwaysSendClientClaims" /> Always Send Client Claims
                                                    <i class="input-helper"></i>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" asp-for="RequireConsent" /> Require Consent
                                                    <i class="input-helper"></i>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-check">
                                                <label class="form-check-label">
                                                    <input asp-for="AlwaysIncludeUserClaimsInIdToken" /> Always Include User Claims In Id Token
                                                    <i class="input-helper"></i>
                                                </label>
                                            </div>
                                           
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


