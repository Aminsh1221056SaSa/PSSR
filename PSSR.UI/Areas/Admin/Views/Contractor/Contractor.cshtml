                                        </tr>
                                    </thead>
                                    <tbody id="contractor-content"></tbody>
                                </table>
                            </div>
                        </div><!-- card -->
                    </div><!-- col -->
                </div>
            </div><!-- row -->
        </div><!-- tab-pane -->
