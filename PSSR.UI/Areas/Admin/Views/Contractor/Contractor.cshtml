@model PSSR.ServiceLayer.ContractorServices.ContractorListCombinedDto
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Contractor";
}

<div class="card bd-1">
    <div class="card-header bg-gray-400 bd-b-0-f pd-b-0">
        <nav class="nav nav-tabs">
            <a class="nav-link active" data-toggle="tab" href="#tabCont1">Contractor</a>
            <a class="nav-link" data-toggle="tab" href="#tabCont2">Person</a>
            <a class="nav-link" data-toggle="tab" href="#tabCont3">Project</a>
        </nav>
    </div><!-- card-header -->
    <div class="card-body bd bd-t-0 tab-content">
        <div id="tabCont1" class="tab-pane active show">
            <div class="container">
                <div class="row" style="width:100%">
                    <div class="col-md-3">
                        <div class="card card-body">
                            <h5 class="card-title mg-b-20">Add Contractor</h5>

                            <form name="contractorForm" method="post" class="form-horizontal" action="">
                                <div class="form-group">
                                    <label class="az-content-label tx-11 tx-medium tx-gray-600" for="name">Name</label>
                                    <input type="text" class="form-control" name="name" id="name">
                                </div><!-- form-group -->

                                <div class="form-group">
                                    <label class="az-content-label tx-11 tx-medium tx-gray-600" for="phone">Phone</label>
                                    <div class="pos-relative">
                                        <input type="text" class="form-control pd-r-80" name="phone" id="phone">
                                    </div>
                                </div><!-- form-group -->
                                <div class="form-group">
                                    <label class="az-content-label tx-11 tx-medium tx-gray-600" for="address">Address</label>
                                    <textarea rows="3" class="form-control" name="address" id="address"></textarea>
                                </div><!-- form-group -->

                                <button class="btn btn-az-primary btn-block" type="submit" id="btn-contractor-save">Save</button>
                            </form>

                        </div>
                        <!-- card -->
                    </div><!-- col -->
                    <div class="col-md-9">
                        <div class="card card-body">
                            <div class="az-content-breadcrumb lst-datatablecontainer" style="display:inline-block;">
                                <table id="contractorLst" class="display responsive nowrap">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Phone</th>
                                            <th>Address</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody id="contractor-content"></tbody>
                                </table>
                            </div>
                        </div><!-- card -->
                    </div><!-- col -->
                </div>
            </div><!-- row -->
        </div><!-- tab-pane -->
        <div id="tabCont2" class="tab-pane">This is tab content 2...</div>
        <div id="tabCont3" class="tab-pane">This is tab content 3...</div>
    </div><!-- card-body -->
</div><!-- card -->

<div id="edit-contractorModal" class="modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title">Contractor Details</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form name="contractorEditForm" method="post" class="form-horizontal" action="">
                <input type="hidden" id="current-contractorId" />
                <div class="modal-body">
                    <div class="form-group">
                        <label class="az-content-label tx-11 tx-medium tx-gray-600" for="editname">Name</label>
                        <input type="text" class="form-control" name="editname" id="editname">
                    </div><!-- form-group -->

                    <div class="form-group">
                        <label class="az-content-label tx-11 tx-medium tx-gray-600" for="editphone">Phone</label>
                        <div class="pos-relative">
                            <input type="text" class="form-control pd-r-80" name="editphone" id="editphone">
                        </div>
                    </div><!-- form-group -->
                    <div class="form-group">
                        <label class="az-content-label tx-11 tx-medium tx-gray-600" for="editaddress">Address</label>
                        <textarea rows="3" class="form-control" name="editaddress" id="editaddress"></textarea>
                    </div><!-- form-group -->
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-indigo">Save changes</button>
                    <button type="button" class="btn btn-outline-light" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div><!-- modal-dialog -->
</div><!-- modal -->

<environment names="Development">
    <script src="~/dist/js/api/ProjectsPerson/contractor.js"></script>
</environment>
<environment names="Staging,Production">
    <script src="~/js/contractor.min.js"></script>
</environment>

<script>
    $(document).ready(function () {
        contractor.init();
        contractor.getContractorList();

        //var hh = window.innerWidth *0.40;
        //$('.lst-datatablecontainer').css('height', hh + 'px');

        $('#contractorLst').on('click', '.edit-contractor', function () {
            var id = $(this).attr('data-id');
            var tr = $(this).closest("tr");
            var rowindex = tr.index();
            contractor.setCurrentIndex(rowindex);
            getContractor(id);
        });


        $('#contractorLst').on('click', '.delete-contractor', function () {
              
            var id = $(this).attr('data-id');
            var tr = $(this).closest("tr");
            var rowindex = tr.index();
            contractor.setCurrentIndex(rowindex);
            contractor.removeContractor(id);
         });

        $('#contractorLst tbody').on('dblclick', 'tr', function () {
            var tr = $(this).closest('tr');
            var id = tr.find('.edit-contractor').attr('data-id');
            var rowindex = tr.index();
            contractor.setCurrentIndex(rowindex);
            getContractor(id);
            $('#edit-contractorModal').modal('toggle');
        });

        async function getContractor(id) {
            var data = await contractor.getContractor(id);
            $('#editname').val(data.name);
            $('#editphone').val(data.phoneNumber);
            $('#editaddress').val(data.address);
            $('#current-contractorId').val(data.id);
        }
    });

</script>