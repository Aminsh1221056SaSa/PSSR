<div class="card card-body">
    <h5 class="card-title mg-b-20"></h5>

    <form name="valueUnitEditForm" method="post" class="form-horizontal" action="">
        <input type="hidden" id="current-valueUnitId" />
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="az-content-label tx-11 tx-medium tx-gray-600" for="editvalueUnitname">Name</label>
                        <input type="text" class="form-control" name="editvalueUnitname" id="editvalueUnitname">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="az-content-label tx-11 tx-medium tx-gray-600" for="editmathType">Math Type</label>
                        <select class="form-control select2" name="editmathType" id="editmathType" asp-items="Html.GetEnumSelectList<PSSR.Common.UnitMathType>()" data-placeholder="Select Math Type"
                                style="width:100%;" required></select>
                    </div><!-- form-group -->
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="az-content-label tx-11 tx-medium tx-gray-600" for="editmathNum">Math Num</label>
                        <input value="0" id="editmathNum" name="editmathNum" type="number" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <br />
                    <button class="btn btn-az-primary btn-block" type="submit">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>
