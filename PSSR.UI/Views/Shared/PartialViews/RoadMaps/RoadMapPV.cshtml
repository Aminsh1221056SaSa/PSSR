<div class="content">
    <div class="row">
        <div class="col-md-4">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Work Packages</h3>
                </div>

                <div class="box-body">
                   <div>
                       <div class="form-group">
                           <label class="control-label required">Name</label>
                           <input id="Name" name="Name" type="text" class="form-control" placeholder="Enter ..." required>
                       </div>
                     
                       <div class="box-footer">
                           <button type="submit" class="btn btn-success pull-right" id="roadmap-create">Create</button>
                       </div>
                   </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="box box-warning">
                <div class="box-header">
                    <h3 class="box-title">Work Package List</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" id="workPackage-query" name="table_search" class="form-control pull-right" placeholder="Search">
                            <div class="input-group-btn">
                                <button id="work-search" type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tb-roadMaps"></tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modal-default-roadmapedit">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Edit Work Package...</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="edit-roadmap-id"/>

                <div class="form-group">
                    <label>Name</label>
                    <input id="name1" name="Name" type="text" class="form-control" placeholder="Enter ..." required>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="save-edit">Save changes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script type='text/javascript'>
    $(document).ready(function () {

        getroadMaps();

        $('#work-search').on('click', function () {
            getroadMaps();
        });

        function getroadMaps() {
            $('#tb-roadMaps').empty();
            
            var query = $('#workPackage-query').val();
            $.ajax({
                type: "Get",
                url: "/APSE/WorkPackage/GetRoadMaps?query=" + query,
                contentType: 'application/json; charset=utf-8',
                dataType: "json",
                success: function (data, status, jqXHR) {
                    $.each(data, function (i, val) {
                        createTr(val);
                    });
                    
                },
                error: function (jqXHR, status) {
                    console.log(jqXHR);
                }
            });
        }
        
        $('#roadmap-create').on('click', function () {
            $('#modal-default-overlay').modal('show');
            var name = $('#Name').val();
            var model = { 'Name': name};
            $.ajax({
                type: "Post",
                url: "/APSE/WorkPackage/CreateRoadMap",
                data: JSON.stringify(model),
                contentType: 'application/json; charset=utf-8',
                dataType: "json",
                success: function (data, status, jqXHR) {
                    $('#modal-default-overlay').modal('toggle');
                    if (data.key == 200) {

                        if (data.model != null) {
                            createTr(data.model);
                        }
                    }
                    else
                    {
                        $('#global-error-message').html(data.value);
                        $('#modal-danger').modal('show');
                    }
                },
                error: function (jqXHR, status) {
                    console.log(jqXHR);
                }
            });
        });

        function createTr(model) {

            var tr = $("<tr id='tr-'"+model.id+"></tr>");
            tr.append("<td>" + model.title + "</td>");
            tr.append("<td><button type='button' class='btn btn-info btn-sm edtit-btn' data-name=" + model.title + " id='edit-" + model.id + "' ><i class='fa fa-edit'></i></button></td>");
             tr.append("<td><button type='button' class='btn btn-danger btn-sm delete-btn' id='delete-" + model.id + "' ><i class='fa fa-trash'></i></button></td>");

            $('#tb-roadMaps').append(tr);
        }

        $('#tb-roadMaps').on('click', '.edtit-btn', function () {
            var id = $(this).attr('id').split('-')[1];
            var name = $(this).attr('data-name');
            $('#edit-roadmap-id').val(id);

            $('#name1').val(name);
            $('#modal-default-roadmapedit').modal('show');
        });

        $('#save-edit').on('click', function () {
          var id=    $('#edit-roadmap-id').val();
            var name = $('#name1').val();

            var model = { 'Id': id, 'Name': name };

            $('#modal-default-roadmapedit').modal('toggle');
             $('#modal-default-overlay').modal('show');
             $.ajax({
                type: "PUT",
                url: "/APSE/WorkPackage/UpdateRoadMap",
                data: JSON.stringify(model),
                contentType: 'application/json; charset=utf-8',
                dataType: "json",
                 success: function (data, status, jqXHR) {
                    $('#modal-default-overlay').modal('toggle');
                    if (data.key == 200) {
                        getroadMaps();
                    }
                    else
                    {
                        $('#global-error-message').html(data.value);
                        $('#modal-danger').modal('show');
                    }
                },
                error: function (jqXHR, status) {
                    console.log(jqXHR);
                }
            });
        });

        $('#tb-roadMaps').on('click', '.delete-btn', function () {

            var id = $(this).attr('id').split('-')[1];
              $('#modal-default-overlay').modal('show');
             $.ajax({
                type: "Delete",
                url: "/APSE/WorkPackage/DeleteWorkPackage/"+id+"",
                contentType: 'application/json; charset=utf-8',
                dataType: "json",
                 success: function (data, status, jqXHR) {
                    $('#modal-default-overlay').modal('toggle');
                    if (data.key == 200) {
                        getroadMaps();
                    }
                    else
                    {
                        $('#global-error-message').html(data.value);
                        $('#modal-danger').modal('show');
                    }
                },
                error: function (jqXHR, status) {
                    console.log(jqXHR);
                }
            });
        });

    });
</script>