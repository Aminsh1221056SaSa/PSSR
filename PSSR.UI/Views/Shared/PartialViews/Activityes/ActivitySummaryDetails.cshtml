<div class="col-md-4" style="background-color:#ebe7e7" id="edit-ac-st">
    <input type="hidden" id="ac-st-id" name="Id" />
    <input type="hidden" id="ac-st-progress" name="Progress" />

    <div class="form-group">
        <label class="control-label">Status</label>
        <select name="HStatus" id="ac-status"
                asp-items="Html.GetEnumSelectList<PSSR.Common.ActivityStatus>()"
                class="form-control sort-filter-width"></select>
    </div>

    <div class="form-group" id="conditionby-section">
        <label class="control-label">Condition</label>
        <select name="condition" id="ac-conditon"
                asp-items="Html.GetEnumSelectList<PSSR.Common.ActivityCondition>()"
                class="form-control sort-filter-width"></select>
    </div>

    <div class="form-group" id="holdBy-section">
        <label class="control-label">Hold By</label>
        <select name="HoldBy" id="ac-holdBy"
                asp-items="Html.GetEnumSelectList<PSSR.Common.ActivityHolBy>()"
                class="form-control sort-filter-width"></select>
    </div>

    <div class="box-footer" style="background-color:#ebe7e7">
        <button type="submit" id="ac-st-save" class="btn btn-info pull-right">Save</button>
    </div>
</div>