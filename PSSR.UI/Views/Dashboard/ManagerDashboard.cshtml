<script type='text/javascript'>
    $(document).ready(function () {
      
        managerDashboard.init(desciplineReport,workPackageStepReport);

        $('#w1-header').on('click', '.tab-header-w1', function () {
            var id = $(this).attr('data-id').split('-')[2];
            var workId = $('#wd-1').attr('data-workId');
            var content = "desciplineStatusPreCom-" + id + "";
            desciplineReport.paintingDesciplineActivityBarStatus(workId, id, content);
            $('#cu-workDes-id').val(workId);
            $('#cu-des-id').val(id);
        });

        $('#w2-header').on('click', '.tab-header-w2', function () {
            var id = $(this).attr('data-id').split('-')[2];
