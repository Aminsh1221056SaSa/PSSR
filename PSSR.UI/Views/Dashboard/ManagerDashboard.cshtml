            workPackageStepReport.paintingWorkStepActivityBarStatus(workId, id, content);

            $('#cu-workSt-id').val(workId);
            $('#cu-wst-id').val(id);
        });

         setCHeight(0.88,'hightable-containter');
    });
</script>


